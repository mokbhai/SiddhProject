<!DOCTYPE html>
<html>
  <head>
    <title>Users - Visitor Management System</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container">
      <%- include('../partials/navbar') %>

      <h2>Users Management</h2>
      <%- include('../partials/messages') %>

      <a href="/users/create" class="btn btn-primary">Create New User</a>

      <table class="users-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Department</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.department %></td>
            <td>
              <a href="/users/edit/<%= user._id %>" class="btn btn-primary"
                >Edit</a
              >
              <form
                action="/users/delete/<%= user._id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  class="btn btn-danger"
                  onclick="return confirm('Are you sure you want to delete this user?')"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
